<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      styleClass="login-scene">
    <VBox fx:id="overlay"
          VBox.vgrow="ALWAYS"
          styleClass="overlay, login-overlay, border-effect, border-effect--primary, alignment--bottom-left">

        <VBox styleClass="logo-wrapper--login">
            <Label text="" styleClass="logo, logo--login"/>
            <ImageView styleClass="logo, logo--login"/>
        </VBox>
        <VBox styleClass="login-form-wrapper">
            <VBox styleClass="login-form-item">
                <Label fx:id="loginFormLabel" text="Name" styleClass="login-form-label"/>
                <TextField fx:id="loginTextField" styleClass="text-input, text-input--secondary, login-form-text-input"/>
            </VBox>
            <Label fx:id="loginWarning" styleClass="login-warning" />
        </VBox>
        <VBox styleClass="login-button-wrapper">
            <Button text="JOIN LOBBY"
                    fx:id="joinButton"
                    onAction="#onLogin"
                    styleClass="button, login-button, button--secondary"/>
            <Button text="CREATE LOBBY"
                    styleClass="button, login-button, button--disabled"/>
        </VBox>
    </VBox>
</VBox>


